{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmitOnError": false // если true то не скомпилирует с ошибкой
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
